  <RecipeDef Name="SurgeryHard" ParentName="DESurgeries" Abstract="True">
    <!-- The skill of the colonist and quality/cleanliness of the room should matters -->
    <!-- Intended for severe injuries that would require a functioning, prosthetic part, such as missing fingers and toes -->
    <surgerySuccessChanceFactor>0.75</surgerySuccessChanceFactor>
    <deathOnFailedSurgeryChance>0.05</deathOnFailedSurgeryChance>
    <workAmount>3000</workAmount>
    <researchPrerequisite>Bionics</researchPrerequisite>
    <workSkillLearnFactor>4</workSkillLearnFactor>
    <skillRequirements>
      <Medicine>15</Medicine>
    </skillRequirements>
  </RecipeDef>

  <RecipeDef Name="SurgeryVeryHard" ParentName="DESurgeries" Abstract="True">
    <!-- The skill of the colonist and quality/cleanliness of the room should matters a lot -->
    <!-- Intended to remove the most serious ailments, such as hediffs applied upon a pawn's birthday -->
    <surgerySuccessChanceFactor>0.7</surgerySuccessChanceFactor>
    <deathOnFailedSurgeryChance>0.1</deathOnFailedSurgeryChance>
    <workAmount>5250</workAmount>
    <researchPrerequisite>MSE_ArchotechSurgery</researchPrerequisite>
    <workSkillLearnFactor>4</workSkillLearnFactor>
    <skillRequirements>
      <Medicine>18</Medicine>
      <Intellectual>6</Intellectual>
    </skillRequirements>
  </RecipeDef>

  <!-- Easy Surgery -->

  <!-- Injury: Burn -->
  <RecipeDef ParentName="SurgeryEasy">
    <defName>CureInjuryBurn</defName>
    <label>cure burn</label>
    <description>Remove a burn; requires regular medicine or better as well as synthread.</description>
    <workerClass>Recipe_RemoveHediff</workerClass>
    <successfullyRemovedHediffMessage>{0} has successfully treated {1}'s burn.</successfullyRemovedHediffMessage>
    <jobString>Curing burn.</jobString>
    <removesHediff>Burn</removesHediff>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Synthread</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
      <thingDefs>
        <li>Synthread</li>
      </thingDefs>
      <disallowedThingDefs>
        <li>MedicineHerbal</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

